<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="progressBarStyle">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="normaltext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/avenir_book</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="normalSubText">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/avenir_book</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="normalTitles">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/avenir_book</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="table_text">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/avenir_book</item>
        <item name="android:textColor">@color/txt_black</item>
    </style>

    <style name="SpinnerBackground">
        <item name="android:fontFamily">@font/avenir_book</item>
        <item name="android:textSize">16sp</item>
        <item name="overlapAnchor">true</item>
        <item name="android:background">@drawable/spinnerbg</item>
    </style>

    <style name="blue_filled_button">
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="blue_empty_button">
        <item name="android:background">@drawable/blue_border</item>
        <item name="android:textAllCaps">false</item>
        <item name="text_color">@color/subtxt_black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="star_icon_style">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:elevation">20dp</item>
    </style>

    <style name="questions_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:background">@drawable/questions_background</item>
    </style>


</resources>