<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/cardsbg">

    <ImageView
        android:id="@+id/action_imageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/achievement_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_timew"
        app:layout_constraintBottom_toBottomOf="@+id/action_imageView"
        app:layout_constraintEnd_toEndOf="@+id/action_imageView"
        app:layout_constraintStart_toStartOf="@+id/action_imageView"
        app:layout_constraintTop_toTopOf="@+id/action_imageView" />

    <TextView
        android:id="@+id/achievement_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/avenir_heavy"
        android:text="Environment Enthusiast"
        android:textColor="@color/txt_black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/action_imageView"
        app:layout_constraintEnd_toStartOf="@+id/achievement_arrow_imageview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/action_imageView"
        app:layout_constraintTop_toTopOf="@+id/action_imageView" />

    <ImageView
        android:id="@+id/achievement_arrow_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/achievement_name_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/achievement_name_textView"
        app:layout_constraintVertical_bias="0.538"
        app:srcCompat="@drawable/ic_go_forwardb" />
</androidx.constraintlayout.widget.ConstraintLayout>